{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "@junkfroot/api": {
      "projectType": "library",
      "root": "projects/api",
      "sourceRoot": "projects/api/src",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/api/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/api/tsconfig.lib.json"
            }
          }
        }
      }
    },
    "@junkfroot/components": {
      "projectType": "library",
      "root": "projects/components",
      "sourceRoot": "projects/components/src",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/components/tsconfig.lib.json"
            }
          }
        }
      }
    },
    "junk-froot": {
      "projectType": "application",
      "root": "projects/junk-froot",
      "sourceRoot": "projects/junk-froot/src",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/junk-froot",
            "index": "projects/junk-froot/src/index.html",
            "browser": "projects/junk-froot/src/main.ts",
            "tsConfig": "projects/junk-froot/tsconfig.app.json",
            "polyfills": [
              "zone.js"
            ],
            "styles": [
              "projects/junk-froot/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "junk-froot:build:production"
            },
            "development": {
              "buildTarget": "junk-froot:build:development"
            }
          },
          "defaultConfiguration": "development",
          "options": {
            "proxyConfig": "projects/junk-froot/proxy.conf.js"
          }
        }
      }
    }
  }
}
